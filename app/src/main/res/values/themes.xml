<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GithubApp" parent="Theme.MaterialComponents.Light">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.GithubApp" parent="Base.Theme.GithubApp" >
        <item name="colorPrimary">@color/hintColor</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item> <!-- Add this line to customize action bar style -->
        <item name="android:textColorPrimary">@android:color/white</item> <!-- Change text color to white -->

    </style>

    <style name="MyActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>